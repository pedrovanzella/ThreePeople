<div class="title">
	<%= title %>
</div>

<table>
  <tr>
    <th>Word</th>
    <th>Person One</th>
    <th>Person Two</th>
    <th>Person Three</th>
  </tr>
  <% for word in @words %>
    <tr>
      <td><%= word.name %></td>
      <td><%= word.personone %></td>
      <td><%= word.persontwo %></td>
      <td><%= word.personthree %></td>
      <td><%= link_to "Show", word %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Word", new_word_path %></p>
